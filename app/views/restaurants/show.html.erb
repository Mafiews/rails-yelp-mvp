<div class="container">
  <h1><%= @restaurant.name %></h1>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

<div>
  <h4>See what customers think of this restaurant</h4>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
            <%= review.content %>
            <%= link_to "Remove",
                        review_path(review),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
          </li>
    <% end %>
  </ul>
</div>


  <%= link_to "Create review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
  <p><%= link_to "Back to all restaurants", restaurants_path %></p>
</div>
